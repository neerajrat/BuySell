
<section class="h-100% gradient-form" style="background-color: #07a">
<div class="container py-5 h-100%">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-xl-5">
      <div class="card rounded-3 text-black">
            <div class="card-body p-md-5 mx-md-4">
              <div class="text-center">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                  style="width: 185px;" alt="logo">
                <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
              </div>
                <p>Please edit your account</p>
                <%= form_with model: @user do |f| %>
                   <div class="field m-2">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: 'name' %>
                  </div>


                  <div class="form-group clearfix m-2">
                    <%= f.label :mobile %><br />
                    <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile",placeholder: 'mobile'  %>
                  </div>

                  <div class="field m-2">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'email' %>
                  </div>

                <div  class="text-center pt-1 mb-3 pb-1 m-2">
                    <%= f.submit  %>
                </div>
                <% end %>
                
                <div  class="text-center pt-1 mb-3 pb-1 m-2">
                    <a href="<%= edit_user_registration_path(current_user) %>">edit your password</a>
                </div>

        </div>
      </div>
    </div>
  </div>
</div>
</section>